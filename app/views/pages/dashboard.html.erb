
<div class="mdl-grid dashboard-navigator">
  <div class="mdl-cell mdl-cell--12-col">

    <button class="dashboard-toggle-button"> <%=@view%> </button>
    <div class="dashboard-toggle-dropdown">
      <%= button_to "Overview", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "#{@month}", view: "Overview"}, class: "dashboard-selector-button" %>
      <%= button_to "Income", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "#{@month}", view: "Income"}, class: "dashboard-selector-button" %>
      <%= button_to "Expense", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "#{@month}", view: "Expense"}, class: "dashboard-selector-button" %>
      <%= button_to "Goal", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "#{@month}", view: "Goal"}, class: "dashboard-selector-button" %>
    </div>

    <button class="month-toggle-button"> Month </button>
    <div class="month-toggle-dropdown">
      <%= button_to "January", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "1", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "February", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "2", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "March", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "3", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "April", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "4", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "May", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "5", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "June", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "6", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "July", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "7", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "August", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "8", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "September", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "9", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "October", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "10", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "November", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "11", view: "#{@view}"}, class: "month-selector-button" %>
      <%= button_to "December", user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{@user.id}", month: "12", view: "#{@view}"}, class: "month-selector-button" %>
    </div>

  </div>
</div>



<div class= "mdl-grid">
	<% @group_users.each_with_index do |user| %>
    <%= button_to user_dashboard_path(current_user.id), method: :get, params: { user_id: "#{user.id}", month: "#{@month}", view: "#{@view}" } do %>
      <h3> <%= user.name %> </h3>
      <div class="mdl-cell mdl-cell--3-col">
  	    <% if user.avatar.present? %>
          <%= image_tag user.avatar.thumb.url %>
        <% end %>
      </div>
    <% end %>
	<%end%>
</div>


<h3> <%= @budget.start_date %> | <%= @budget.end_date %> </h3>

<% if @view == "Overview" %>
  <%= render "pages/overview" %>
<% elsif @view == "Income" %>
  <%= render "pages/income" %>
<% elsif @view == "Expense" %>
  <%= render "pages/expense" %>
<% elsif @view == "Balance" %>
  <%= render "pages/balance" %>
<% end %>
