<div class="container-fluid">
  <div class="row">  
    <div style= "text-align: center"> <% if params[:budgettype] == "actualexpense" %>
        <h1> Actual Expenses </h1>
        <% elsif params[:budgettype] == "expense" %>
        <h1> Planned Expenses </h1>
        <% end %>
    </div>
  </div>
</div>

<!-- <ul class="nav nav-pills col-md-offset-4">
