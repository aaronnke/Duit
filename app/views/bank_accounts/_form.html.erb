<%= form_for @bankaccounts do |f| %>
	<%= f.label :"Bank Account Number:"%>
	<%= f.text_field :bank_account_number %>
</br>
	<%= f.label :"Pin:"%>
	<%= f.password_field :pin %>
	<%= f.hidden_field :user_id, :value => 1  %>
	<%= f.hidden_field :balance, :value => 0  %>

</br>
   <%= f.submit %>     

<%end%>