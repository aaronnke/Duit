<div class="container-fluid">
<div class="row">
  <div class="col-md-10 col-md-offset-1">	



<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading cooltable">Transactions History</div>
  <div class="panel-body">
  	<% if @user == current_user %>
    	<%= render "transactions/new" %>
  	<% end %>
  </div>

  <!-- Table -->
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Category</th>
      <th>Type</th>
      <th class = "text-right">Amount</th>
    </tr>
  </thead>
  <tbody>

<% @transactions.reverse.each do |transaction| %>
	<% if transaction.tag.category == "income" %>
		<tr class="success">
	      	<td><%= transaction.created_at.strftime("%d %b") %></td>
	      	<td><%= transaction.description %></td>
	      	<td><%= transaction.tag.description %></td>
	      	<td>Addition</td>
	      	<td class = "text-right"><%= number_to_currency(transaction.amount, unit: "MYR ") %></td>
    	</tr>
    <%else%>	
	    <tr class="danger">
	      <td><%= transaction.created_at.strftime("%d %b") %></td>
	      <td><%= transaction.description %></td>
	      <td><%= transaction.tag.description %></td>
	      <td>Deduction</td>
	      <td class = "text-right"><%= number_to_currency(transaction.amount, unit: "MYR ") %></td>
	    </tr>
    <%end%>
<%end%>   


  </tbody>
</table> 
</div>

</div>

</div>
</div>
